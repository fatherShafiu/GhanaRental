<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">
      Documents for <%= @rental_application.property.title %>
    </h1>

    <% if policy(Document.new(rental_application: @rental_application)).create? %>
      <%= link_to 'Upload Documents', new_rental_application_document_path(@rental_application), class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @documents.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Document Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Uploaded By</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Files</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Uploaded</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @documents.each do |document| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="font-medium text-gray-900"><%= document.display_name %></span>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <%= document.user.profile&.full_name || document.user.email %>
              </td>

              <td class="px-6 py-4">
                <div class="flex flex-wrap gap-2">
                  <% document.files.each do |file| %>
                    <%= link_to file.filename, rails_blob_path(file, disposition: 'attachment'),
                              class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
                  <% end %>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= time_ago_in_words(document.created_at) %> ago
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <% document.files.each do |file| %>
                  <%= link_to "View", rails_blob_path(file, disposition: 'preview'),
                            target: "_blank",
                            class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <% end %>

                <% if policy(document).destroy? %>
                  <%= link_to "Delete", rental_application_document_path(@rental_application, document),
                            method: :delete,
                            data: { confirm: "Are you sure you want to delete this document?" },
                            class: "text-red-600 hover:text-red-900" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">No documents uploaded yet</h3>
      <p class="mt-2 text-gray-500">Upload documents to complete your rental application.</p>

      <% if policy(Document.new(rental_application: @rental_application)).create? %>
        <div class="mt-6">
          <%= link_to 'Upload Documents', new_rental_application_document_path(@rental_application), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
