<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">
        Welcome to PropertyRental
      </h1>
      <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">
        Find your perfect rental property or list your property for rent.
      </p>
    </div>

    <div class="mt-10 flex justify-center space-x-4">
      <% if user_signed_in? %>
        <%= link_to "Go to Dashboard", dashboard_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
        <%= link_to "Login", new_user_session_path, class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <% end %>
    </div>
  </div>
</div>
