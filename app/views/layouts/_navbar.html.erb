<nav class="bg-white shadow-lg">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center" do %>
          <svg class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span class="ml-2 text-xl font-bold text-gray-900">PropertyRental</span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <%= link_to "Properties", properties_path, class: "text-gray-700 hover:text-indigo-600 font-medium" %>

        <% if user_signed_in? %>
          <!-- User-specific links based on role -->
          <% if current_user.landlord? || current_user.admin? %>
            <%= link_to "My Properties", my_properties_properties_path, class: "text-gray-700 hover:text-indigo-600 font-medium" %>
          <% end %>

          <%= link_to "Dashboard", dashboard_path, class: "text-gray-700 hover:text-indigo-600 font-medium" %>
          <div class="relative" data-controller="dropdown">
  <%= link_to notifications_path, class: "text-gray-700 hover:text-indigo-600 relative" do %>
    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
    </svg>
    <%= render 'notifications/count', count: current_user.unread_notifications_count if user_signed_in? && current_user.unread_notifications_count > 0 %>
  <% end %>
</div>


          <!-- User dropdown -->
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle" class="flex items-center space-x-2 text-gray-700 hover:text-indigo-600 focus:outline-none">
              <% if current_user.profile&.first_name %>
                <span class="font-medium">Hi, <%= current_user.profile.first_name %></span>
              <% else %>
                <span class="font-medium">My Account</span>
              <% end %>
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50">
              <%= link_to "Profile", edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>

              <% if current_user.tenant? %>
                <%= link_to "My Favorites", favorites_properties_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <% end %>

              <div class="border-t border-gray-100"></div>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            </div>
          </div>

        <% else %>
          <!-- Guest links -->
          <%= link_to "Sign In", new_user_session_path, class: "text-gray-700 hover:text-indigo-600 font-medium" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
        <% end %>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button data-action="click->mobile-menu#toggle" class="text-gray-700 hover:text-indigo-600 focus:outline-none">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div data-controller="mobile-menu" class="hidden md:hidden pb-4">
      <div class="space-y-2">
        <%= link_to "Properties", properties_path, class: "block px-3 py-2 text-gray-700 hover:text-indigo-600 font-medium" %>

        <% if user_signed_in? %>
          <% if current_user.landlord? || current_user.admin? %>
            <%= link_to "My Properties", my_properties_properties_path, class: "block px-3 py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
          <% end %>

          <%= link_to "Dashboard", dashboard_path, class: "block px-3 py-2 text-gray-700 hover:text-indigo-600 font-medium" %>

          <% if current_user.tenant? %>
            <%= link_to "My Favorites", favorites_properties_path, class: "block px-3 py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
          <% end %>

          <%= link_to "Profile", edit_user_registration_path, class: "block px-3 py-2 text-gray-700 hover:text-indigo-600 font-medium" %>

          <div class="border-t border-gray-200 pt-2">
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block w-full text-left px-3 py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
          </div>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "block px-3 py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "block px-3 py-2 text-indigo-600 hover:text-indigo-700 font-medium" %>
        <% end %>

        <%= link_to "Notifications", notifications_path, class: "block px-3 py-2 text-gray-700 hover:text-indigo-600 font-medium" %>
      </div>
    </div>
  </div>
</nav>
