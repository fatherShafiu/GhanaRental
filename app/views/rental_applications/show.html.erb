<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6">
      <!-- Header -->
      <div class="flex justify-between items-start mb-6">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Rental Application</h1>
          <p class="text-gray-600">for <%= link_to @application.property.title, @application.property, class: "text-indigo-600 hover:text-indigo-800" %></p>
        </div>

        <span class="px-3 py-1 text-sm font-semibold rounded-full <%= application_status_class(@application.status) %>">
          <%= @application.status.humanize %>
        </span>
      </div>

      <!-- Applicant Info -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-3">Applicant Information</h2>
          <div class="space-y-2">
            <p><strong>Name:</strong> <%= @application.tenant.profile&.full_name || @application.tenant.email %></p>
            <p><strong>Email:</strong> <%= @application.tenant.email %></p>
            <p><strong>Phone:</strong> <%= @application.tenant.profile&.phone_number || 'Not provided' %></p>
            <p><strong>Applied on:</strong> <%= @application.submitted_at.strftime('%B %d, %Y at %H:%M') %></p>
          </div>
        </div>

        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-3">Property Information</h2>
          <div class="space-y-2">
            <p><strong>Address:</strong> <%= @application.property.full_address %></p>
            <p><strong>Rent:</strong> Ghâ‚µ<%= @application.property.price %>/month</p>
            <p><strong>Bedrooms:</strong> <%= @application.property.bedrooms %></p>
            <p><strong>Bathrooms:</strong> <%= @application.property.bathrooms %></p>
          </div>
        </div>
      </div>

      <!-- Message -->
      <div class="border-t pt-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-3">Applicant's Message</h2>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-gray-700"><%= @application.message %></p>
        </div>
      </div>
      <!-- Add this after the message section -->
<div class="border-t pt-6 mb-6">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Documents</h2>

  <div class="mb-4">
    <span class="text-sm font-medium text-gray-700">Document Status: </span>
    <span class="px-2 py-1 text-xs font-semibold rounded-full
      <%= @application.document_status == 'complete' ? 'bg-green-100 text-green-800' :
          @application.document_status == 'partial' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
      <%= @application.document_status.humanize %>
    </span>
  </div>

  <% if @application.documents.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <% @application.documents.each do |document| %>
        <div class="bg-gray-50 rounded-lg p-3">
          <h4 class="font-medium text-gray-900"><%= document.display_name %></h4>
          <div class="mt-2 space-y-1">
            <% document.files.each do |file| %>
              <div class="flex items-center justify-between">
                <%= link_to file.filename, rails_blob_path(file, disposition: 'attachment'),
                          class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
                <span class="text-xs text-gray-500"><%= number_to_human_size(file.byte_size) %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if policy(Document.new(rental_application: @application)).create? %>
    <%= link_to 'Upload Documents', new_rental_application_document_path(@application), class: "btn btn-secondary" %>
  <% end %>

  <%= link_to 'View All Documents', rental_application_documents_path(@application), class: "btn btn-secondary ml-2" %>
</div>
      <!-- Actions -->
      <div class="border-t pt-6">
        <% if current_user.landlord? && @application.pending? %>
          <div class="flex space-x-4">
            <%= link_to 'Approve Application',
                      rental_application_path(@application, rental_application: { status: :approved }),
                      method: :patch,
                      data: { confirm: 'Are you sure you want to approve this application?' },
                      class: "btn btn-success" %>

            <%= link_to 'Reject Application',
                      rental_application_path(@application, rental_application: { status: :rejected }),
                      method: :patch,
                      data: { confirm: 'Are you sure you want to reject this application?' },
                      class: "btn btn-danger" %>
          </div>
        <% elsif current_user.tenant? && @application.pending? %>
          <%= link_to 'Withdraw Application',
                    @application,
                    method: :delete,
                    data: { confirm: 'Are you sure you want to withdraw your application?' },
                    class: "btn btn-danger" %>
        <% end %>

        <%= link_to 'Back to Applications', rental_applications_path, class: "btn btn-secondary mt-4" %>
      </div>
    </div>
  </div>
</div>
