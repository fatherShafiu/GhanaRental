<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Notifications</h1>

    <% if current_user.notifications.unread.any? %>
      <%= button_to "Mark All as Read", mark_all_as_read_notifications_path,
                  method: :patch,
                  class: "btn btn-secondary" %>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow">
    <% if @notifications.any? %>
      <div class="divide-y divide-gray-200">
        <% @notifications.each do |notification| %>
          <div class="p-6 <%= 'bg-blue-50' unless notification.read %>">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center space-x-3">
                  <% unless notification.read %>
                    <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
                  <% end %>
                  <p class="text-gray-900"><%= notification.message %></p>
                </div>
                <p class="text-sm text-gray-500 mt-2">
                  <%= time_ago_in_words(notification.created_at) %> ago
                </p>

                <% if notification.notifiable %>
                  <div class="mt-3">
                    <% case notification.notifiable %>
                    <% when Message %>
                      <%= link_to "View Conversation", conversation_path(notification.notifiable.conversation),
                                class: "text-sm text-indigo-600 hover:text-indigo-800" %>
                    <% when RentalApplication %>
                      <%= link_to "View Application", rental_application_path(notification.notifiable),
                                class: "text-sm text-indigo-600 hover:text-indigo-800" %>
                    <% end %>
                  </div>
                <% end %>
              </div>

              <% unless notification.read %>
                <%= button_to mark_as_read_notification_path(notification),
                            method: :patch,
                            class: "ml-4 text-gray-400 hover:text-gray-600",
                            title: "Mark as read" do %>
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No notifications</h3>
        <p class="mt-2 text-gray-500">You'll see important updates here.</p>
      </div>
    <% end %>
  </div>
</div>
