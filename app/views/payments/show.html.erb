<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6">
      <!-- Header -->
      <div class="flex justify-between items-start mb-6">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Rent Payment</h1>
          <p class="text-gray-600">for <%= link_to @payment.rental_application.property.title, @payment.rental_application.property, class: "text-indigo-600 hover:text-indigo-800" %></p>
        </div>

        <span class="px-3 py-1 text-sm font-semibold rounded-full <%= payment_status_class(@payment.status) %>">
          <%= @payment.status.humanize %>
        </span>
      </div>

      <!-- Payment Details -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-3">Payment Information</h2>
          <div class="space-y-2">
            <p><strong>Amount:</strong> <%= number_to_currency(@payment.amount, unit: "â‚µ") %></p>
            <p><strong>Currency:</strong> <%= @payment.currency %></p>
            <p><strong>Transaction ID:</strong> <%= @payment.transaction_id %></p>
            <p><strong>Created:</strong> <%= @payment.created_at.strftime('%B %d, %Y at %H:%M') %></p>
          </div>
        </div>

        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-3">Related Information</h2>
          <div class="space-y-2">
            <p><strong>Property:</strong> <%= link_to @payment.rental_application.property.title, @payment.rental_application.property, class: "text-indigo-600 hover:text-indigo-800" %></p>
            <p><strong>Address:</strong> <%= @payment.rental_application.property.full_address %></p>
            <p><strong>Landlord:</strong> <%= @payment.rental_application.property.landlord.profile&.full_name || @payment.rental_application.property.landlord.email %></p>
          </div>
        </div>
      </div>

      <!-- Payment Form -->
      <% if @payment.pending? && current_user.tenant? %>
        <div class="border-t pt-6 mb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Make Payment</h2>

          <%= form_with url: process_payment_payment_path(@payment), method: :post do |form| %>
            <div class="mb-4">
              <%= form.label :phone_number, "Mobile Money Number *", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :phone_number,
                                class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
                                placeholder: "233XXXXXXXXX",
                                required: true,
                                pattern: "233[0-9]{9}",
                                title: "Please enter a valid Ghana mobile number (233XXXXXXXXX)" %>
              <p class="mt-1 text-sm text-gray-500">Enter your MTN Mobile Money number in the format 233XXXXXXXXX</p>
            </div>

            <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-4">
              <p class="text-yellow-800 text-sm">
                <strong>Important:</strong> You will receive a prompt on your phone to confirm the payment.
                Please have your Mobile Money PIN ready.
              </p>
            </div>

            <%= form.submit "Pay Now", class: "btn btn-primary w-full", data: { confirm: "Are you ready to make the payment? You will receive a prompt on your phone." } %>
          <% end %>
        </div>
      <% end %>

      <!-- Actions -->
      <div class="border-t pt-6">
        <%= link_to 'Back to Payments', payments_path, class: "btn btn-secondary" %>
        <% if @payment.pending? %>
          <%= link_to 'Check Status', status_payment_path(@payment), method: :get, class: "btn btn-secondary ml-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
