<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">
    <%= current_user.landlord? ? 'Rent Payments' : 'My Payments' %>
  </h1>

  <% if @payments.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <% if current_user.landlord? %>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tenant</th>
            <% end %>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Property</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @payments.each do |payment| %>
            <tr>
              <% if current_user.landlord? %>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= payment.rental_application.tenant.profile&.full_name || payment.rental_application.tenant.email %>
                </td>
              <% end %>

              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to payment.rental_application.property.title, payment.rental_application.property, class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <span class="font-semibold"><%= number_to_currency(payment.amount, unit: "â‚µ") %></span>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 text-xs font-semibold rounded-full
                  <%= payment_status_class(payment.status) %>">
                  <%= payment.status.humanize %>
                </span>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= payment.created_at.strftime('%b %d, %Y') %>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to 'View', payment, class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <% if payment.pending? && current_user.tenant? %>
                  <%= link_to 'Pay Now', payment_path(payment), class: "text-green-600 hover:text-green-900" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">No payments yet</h3>
      <p class="mt-2 text-gray-500">
        <%= current_user.landlord? ? 'You haven\'t received any payments yet.' : 'You don\'t have any payments to make yet.' %>
      </p>
    </div>
  <% end %>
</div>
