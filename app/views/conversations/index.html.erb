<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Messages</h1>
  </div>

  <div class="bg-white rounded-lg shadow">
    <% if @conversations.any? %>
      <div class="divide-y divide-gray-200">
        <% @conversations.each do |conversation| %>
          <%= link_to conversation_path(conversation), class: "block hover:bg-gray-50 transition-colors duration-200" do %>
            <div class="p-6">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center">
                    <span class="text-indigo-600 font-semibold">
                      <%= conversation.other_participant(current_user).profile&.first_name&.first || 'U' %>
                    </span>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900">
                      <%= conversation.other_participant(current_user).profile&.full_name || conversation.other_participant(current_user).email %>
                    </h3>
                    <% if conversation.property %>
                      <p class="text-sm text-gray-600">Re: <%= conversation.property.title %></p>
                    <% end %>
                    <% if conversation.messages.any? %>
                      <p class="text-sm text-gray-500 mt-1 line-clamp-1">
                        <%= conversation.messages.last.body %>
                      </p>
                    <% end %>
                  </div>
                </div>

                <div class="text-right">
                  <p class="text-sm text-gray-500">
                    <%= time_ago_in_words(conversation.updated_at) %> ago
                  </p>
                  <% if conversation.unread_messages_count(current_user) > 0 %>
                    <span class="inline-flex items-center justify-center w-6 h-6 bg-indigo-600 text-white text-xs font-semibold rounded-full mt-1">
                      <%= conversation.unread_messages_count(current_user) %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No messages yet</h3>
        <p class="mt-2 text-gray-500">Start a conversation by contacting a property owner or tenant.</p>
      </div>
    <% end %>
  </div>
</div>
