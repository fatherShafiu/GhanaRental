<%= turbo_frame_tag "properties" do %>
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
  <div class="container mx-auto px-4">
    <!-- Image Gallery -->
    <% if @property.images.attached? %>
      <div class="mb-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <% @property.images.each_with_index do |image, index| %>
            <div class="rounded-2xl overflow-hidden shadow-2xl hover:shadow-3xl transition-all duration-300 <%= index == 0 ? 'md:col-span-2 md:row-span-2' : '' %>">
              <%= image_tag image, class: "w-full h-64 md:h-80 object-cover hover:scale-110 transition-transform duration-500 cursor-zoom-in",
                           data: { action: "click->gallery#open", index: index } %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Header Card -->
        <div class="bg-white rounded-2xl shadow-2xl p-8 mb-8 border border-gray-100">
          <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-6">
            <div class="flex-1">
              <h1 class="text-4xl font-bold text-gray-900 mb-2 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
                <%= @property.title %>
              </h1>
              <div class="flex items-center text-gray-600 mb-4">
                <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="text-lg"><%= @property.full_address %></span>
              </div>
            </div>

            <!-- Price Badge -->
            <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-3 rounded-xl shadow-lg">
              <div class="text-3xl font-bold">Ghâ‚µ<%= number_with_delimiter(@property.price, delimiter: ',') %></div>
              <div class="text-sm opacity-90">per month</div>
            </div>
          </div>

          <!-- Features Grid -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
            <div class="text-center p-4 bg-indigo-50 rounded-xl border border-indigo-100">
              <div class="text-2xl font-bold text-indigo-600"><%= @property.bedrooms %></div>
              <div class="text-sm text-gray-600">Bedrooms</div>
            </div>
            <div class="text-center p-4 bg-green-50 rounded-xl border border-green-100">
              <div class="text-2xl font-bold text-green-600"><%= @property.bathrooms %></div>
              <div class="text-sm text-gray-600">Bathrooms</div>
            </div>
            <% if @property.square_feet %>
              <div class="text-center p-4 bg-blue-50 rounded-xl border border-blue-100">
                <div class="text-2xl font-bold text-blue-600"><%= number_to_human(@property.square_feet) %></div>
                <div class="text-sm text-gray-600">Square Feet</div>
              </div>
            <% end %>
            <div class="text-center p-4 bg-purple-50 rounded-xl border border-purple-100">
              <div class="text-sm font-semibold text-purple-600 capitalize"><%= @property.property_type&.humanize || 'Not specified' %></div>
              <div class="text-sm text-gray-600">Type</div>
            </div>
          </div>

          <!-- Status Badge -->
          <div class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold mb-6
            <%= @property.published? ? 'bg-green-100 text-green-800' :
               @property.draft? ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
            <span class="w-2 h-2 rounded-full mr-2
              <%= @property.published? ? 'bg-green-500' :
                 @property.draft? ? 'bg-yellow-500' : 'bg-gray-500' %>"></span>
            <%= @property.status.capitalize %>
          </div>
        </div>

        <!-- Description Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 border border-gray-100">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 text-indigo-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Property Description
          </h3>
          <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
            <p class="text-lg"><%= @property.description %></p>
          </div>
        </div>

        <!-- Details Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 border border-gray-100">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 text-indigo-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Property Details
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-3">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-indigo-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                <div>
                  <p class="text-sm text-gray-600">Property Type</p>
                  <p class="font-semibold text-gray-900"><%= @property.property_type&.humanize || 'Not specified' %></p>
                </div>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-indigo-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <p class="text-sm text-gray-600">Available From</p>
                  <p class="font-semibold text-gray-900"><%= @property.available_from.strftime('%B %d, %Y') %></p>
                </div>
              </div>
            </div>
            <div class="space-y-3">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-indigo-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <p class="text-sm text-gray-600">Location</p>
                  <p class="font-semibold text-gray-900"><%= @property.city %>, <%= @property.state %>, Ghana</p>
                </div>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-indigo-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <p class="text-sm text-gray-600">Status</p>
                  <p class="font-semibold text-gray-900 capitalize"><%= @property.status %></p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Floor Plan Section -->
        <% if @property.floor_plan.attached? %>
          <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 border border-gray-100">
            <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <svg class="w-6 h-6 text-indigo-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
              Floor Plan
            </h3>
            <div class="bg-gray-50 rounded-2xl p-6 border border-gray-200">
              <%= image_tag @property.floor_plan, class: "w-full h-auto max-w-md mx-auto rounded-lg shadow-md" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- Contact Card -->
        <div class="bg-white rounded-2xl shadow-2xl p-6 sticky top-6 border border-gray-100">
          <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Contact Information
          </h3>

          <% if @property.landlord.profile %>
            <div class="flex items-center mb-6 p-4 bg-indigo-50 rounded-xl border border-indigo-100">
              <div class="w-12 h-12 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full flex items-center justify-center mr-4 text-white font-semibold text-lg">
                <%= @property.landlord.profile.first_name[0] %><%= @property.landlord.profile.last_name[0] %>
              </div>
              <div>
                <p class="font-semibold text-gray-900"><%= @property.landlord.profile.full_name %></p>
                <p class="text-sm text-indigo-600">Property Owner</p>
              </div>
            </div>
          <% end %>

          <!-- Action Buttons -->
          <div class="space-y-3 mb-6">
            <% if user_signed_in? %>
              <% if current_user.tenant? %>
                <% if current_user.rental_applications.for_property(@property.id).exists? %>
                  <%= link_to rental_application_path(current_user.rental_applications.for_property(@property.id).first),
                            class: "w-full btn-primary-lg flex items-center justify-center group" do %>
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    View Application
                  <% end %>
                <% else %>
                  <%= link_to new_property_rental_application_path(@property),
                            class: "w-full btn-primary-lg flex items-center justify-center group" do %>
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Apply for Rental
                  <% end %>
                <% end %>
              <% end %>

              <%= link_to conversations_path(recipient_id: @property.landlord.id, property_id: @property.id),
                        method: :post,
                        class: "w-full btn-secondary-lg flex items-center justify-center group" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                </svg>
                Send Message
              <% end %>

              <!-- Favorite Button -->
              <%= button_to toggle_favorite_property_path(@property),
                          method: :post,
                          class: "w-full #{current_user.favorited?(@property) ? 'btn-danger-lg' : 'btn-secondary-lg'} flex items-center justify-center group",
                          data: { turbo_frame: "_top" } do %>
                <svg class="w-5 h-5 mr-2" fill="<%= current_user.favorited?(@property) ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                <%= current_user.favorited?(@property) ? 'Remove from Favorites' : 'Add to Favorites' %>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path, class: "w-full btn-primary-lg flex items-center justify-center group" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                </svg>
                Sign in to Apply
              <% end %>
            <% end %>
          </div>

          <!-- Contact Details -->
          <div class="space-y-4 border-t border-gray-200 pt-6">
            <div class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-indigo-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span><%= @property.landlord.profile.phone_number if @property.landlord.profile&.phone_number %></span>
            </div>
            <div class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-indigo-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span><%= @property.landlord.email %></span>
            </div>
          </div>
        </div>

        <!-- Map Card -->
        <div class="bg-white rounded-2xl shadow-xl p-6 mt-8 border border-gray-100">
          <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Location Map
          </h3>
          <div class="bg-gray-200 rounded-xl h-64 flex items-center justify-center text-gray-500">
            <div class="text-center">
              <svg class="w-12 h-12 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <p class="text-sm">Interactive map would be displayed here</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Image Gallery Modal -->
<div id="gallery-modal" class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden" data-gallery-target="modal">
  <div class="relative w-full h-full flex items-center justify-center">
    <button class="absolute top-4 right-4 text-white text-3xl z-10" data-action="click->gallery#close">
      &times;
    </button>
    <div class="swiper-container w-full h-full">
      <div class="swiper-wrapper">
        <% if @property.images.attached? %>
          <% @property.images.each do |image| %>
            <div class="swiper-slide flex items-center justify-center">
              <%= image_tag image, class: "max-w-full max-h-full object-contain" %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="swiper-button-next text-white"></div>
      <div class="swiper-button-prev text-white"></div>
    </div>
  </div>
</div>
<% end %>
