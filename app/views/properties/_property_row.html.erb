<tr id="<%= dom_id(property) %>">
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="flex items-center">
      <% if property.images.attached? %>
        <%= image_tag property.images.first, class: "h-12 w-12 rounded-lg object-cover mr-4 shadow-md" %>
      <% else %>
        <div class="h-12 w-12 bg-indigo-100 rounded-lg flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
        </div>
      <% end %>
      <div>
        <%= link_to property.title, property, class: "text-indigo-600 hover:text-indigo-900 font-medium text-sm" %>
        <p class="text-xs text-gray-500"><%= property.city %>, <%= property.state %></p>
        <p class="text-xs text-gray-400"><%= property.created_at.strftime('%b %d, %Y') %></p>
      </div>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="text-gray-900 font-semibold">Ghâ‚µ<%= number_with_delimiter(property.price, delimiter: ',') %></span>
    <span class="text-xs text-gray-500 block">per month</span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="px-3 py-1 text-xs font-semibold rounded-full
      <%= property.published? ? 'bg-green-100 text-green-800' :
         property.draft? ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
      <%= property.status.capitalize %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="flex items-center">
      <svg class="w-4 h-4 text-pink-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
      </svg>
      <span class="text-gray-700"><%= property.favorites.count %></span>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
    <div class="flex items-center space-x-2">
      <%= link_to edit_property_path(property), class: "text-indigo-600 hover:text-indigo-900 p-2 rounded-lg hover:bg-indigo-50 transition-colors", title: "Edit" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      <% end %>

      <% if property.draft? %>
        <%= button_to publish_property_path(property), method: :patch,
                    class: "text-green-600 hover:text-green-900 p-2 rounded-lg hover:bg-green-50 transition-colors",
                    data: { turbo_confirm: "Are you sure you want to publish this property?" },
                    title: "Publish" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        <% end %>
      <% elsif property.published? %>
        <%= button_to archive_property_path(property), method: :patch,
                    class: "text-gray-600 hover:text-gray-900 p-2 rounded-lg hover:bg-gray-50 transition-colors",
                    data: { turbo_confirm: "Are you sure you want to archive this property?" },
                    title: "Archive" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
          </svg>
        <% end %>
      <% end %>

      <%= link_to property_path(property), class: "text-blue-600 hover:text-blue-900 p-2 rounded-lg hover:bg-blue-50 transition-colors", title: "View" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
      <% end %>
    </div>
  </td>
</tr>
