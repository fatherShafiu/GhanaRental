<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">My Properties</h1>
    <%= link_to 'Add New Property', new_property_path, class: "btn btn-primary" %>
  </div>

  <% if @properties.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @properties.each do |property| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
          <% if property.main_image %>
            <%= image_tag property.main_image, class: "w-full h-48 object-cover" %>
          <% else %>
            <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
              <span class="text-gray-500">No image</span>
            </div>
          <% end %>

          <div class="p-4">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              <%= link_to property.title, property, class: "hover:text-indigo-600" %>
            </h3>

            <p class="text-2xl font-bold text-indigo-600 mb-2">$<%= property.price %></p>

            <div class="flex items-center text-sm text-gray-500 mb-3">
              <span class="mr-4"><%= property.bedrooms %> beds</span>
              <span class="mr-4"><%= property.bathrooms %> baths</span>
              <% if property.square_feet %>
                <span><%= number_to_human(property.square_feet) %> sqft</span>
              <% end %>
            </div>

            <p class="text-sm text-gray-600 mb-3"><%= property.city %>, <%= property.state %></p>

            <div class="flex items-center justify-between mb-3">
              <span class="px-2 py-1 text-xs font-semibold rounded-full
                <%= property.published? ? 'bg-green-100 text-green-800' :
                   property.draft? ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
                <%= property.status %>
              </span>
              <span class="text-sm text-gray-500"><%= property.favorites.count %> favorites</span>
            </div>

            <div class="flex space-x-2">
              <%= link_to 'Edit', edit_property_path(property), class: "btn btn-secondary text-sm" %>
              <%= link_to 'View', property, class: "btn btn-primary text-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg mb-4">You haven't listed any properties yet.</p>
      <%= link_to "List Your First Property", new_property_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
