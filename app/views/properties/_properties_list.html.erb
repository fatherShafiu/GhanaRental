<% if properties.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 mb-12">
    <% properties.each do |property| %>
      <%= render 'property_card', property: property %>
    <% end %>
  </div>

  <!-- Elegant Pagination -->
  <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
    <div class="flex justify-center">
      <%== pagy_nav(pagy) %>
    </div>
  </div>
<% else %>
  <!-- Beautiful Empty State -->
  <div class="text-center py-16 bg-white rounded-2xl shadow-sm border border-gray-100">
    <div class="w-24 h-24 mx-auto mb-6 bg-indigo-100 rounded-3xl flex items-center justify-center">
      <svg class="w-12 h-12 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </div>
    <h3 class="text-2xl font-bold text-gray-900 mb-3">No properties found</h3>
    <p class="text-gray-600 mb-6 max-w-md mx-auto">
      We couldn't find any properties matching your criteria. Try adjusting your filters or search terms.
    </p>
    <%= link_to "Clear All Filters", properties_path,
                class: "btn-secondary-lg hover:bg-gray-50 transition-all duration-200" %>
  </div>
<% end %>
